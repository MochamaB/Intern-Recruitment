@model Workflows.ViewModels.EmployeeIndexViewModel

@{
    ViewData["Title"] = "Index";
    // Roles allowed to view admin functions. Add roles below to the roles Array//
    // Roles available are "Admin","HR", "Hod", "supervisor","user","2_step_mgrs","2_step_secs","FieldUser","FieldSupervisor"
    var rolesArray = new[] { "Admin", "HR" };
    var roles = string.Join(",", rolesArray);
}



<a asp-authorize-role="@roles" asp-action="Create" class="btn btn-primary text-white mb-0 me-0  float-end">
    <div style="display: flex; align-items: center;">
        <i class="mdi mdi-plus-circle-outline" style="margin-right: 5px;"></i>
        <span>  Create New</span>
    </div>
</a>
<div style="clear: both;"></div>
<div class=" table-responsive" id="dataTable">
    <table id="table"
           data-toggle="table"
           data-icon-size="sm"
           data-buttons-class="primary"
           data-toolbar-align="right"
           data-buttons-align="left"
           data-search-align="left"
           data-sort-order="asc"
           data-search="true"
           data-mobile-responsive="true"
           data-sticky-header="true"
           data-pagination="true"
           data-page-list="[100, 200, 250, 500, ALL]"
           data-page-size="100"
           data-show-footer="false"
           data-side-pagination="client"
           data-show-export="true"
           class="table">
    <thead>
        <tr>
            <th>
               Department
            </th>
            <th>
                    Fullname
            </th>
            <th>
                    Username
            </th>
            <th>
                    Designation
            </th>
            <th>
                    EmailAddress
            </th>
            <th>
                    PayrollNo
            </th>
            <th>
                    Station
            </th>
            <th>
                    Hod
            </th>
            <th>
                    Supervisor
            </th>
            <th>
                    User Role
            </th>
            <th>
                    Scale
            </th>
            <th>
                    EmployeId
            </th>
            <th>
                    ContractEnd
            </th>
            <th>
                HireDate
            </th>
            <th>
                    LastPay
            </th>
            <th>
                    EmpisCurrActive
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employees) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.PayrollNo)
            </td>
            <td>
                        @Html.DisplayFor(modelItem => item.Station)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Supervisor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Scale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
    
            <td>
                @Html.DisplayFor(modelItem => item.LastPay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmpisCurrActive)
            </td>
           
            <td>
                        <a asp-action="Details" asp-route-payrollNo="@item.PayrollNo"><i class="mdi mdi-eye mdi-24px text-warning"></i></a>
                        <a asp-authorize-role="@roles" asp-action="Edit" asp-route-id="@item.PayrollNo"><i class="mdi mdi-lead-pencil mdi-24px text-primary"></i></a>
                        <a asp-authorize-role="@roles" asp-action="Delete" asp-route-id="@item.PayrollNo"> <i class="mdi mdi-delete mdi-24px text-danger"></i></a>
              
            </td>
        </tr>
}
    </tbody>
</table>
</div>
