@using Workflows.Extensions
@model Workflows.ViewModels.TabViewModel

<ul class="nav nav-tabs" role="tablist">
    @for (int i = 0; i < Model.Tabs.Count; i++)
    {
        <li class="nav-item" role="presentation">
            <a class="nav-link @(Model.Tabs[i].IsActive ? "active" : "")" id="@Model.Tabs[i].Id-tab" data-bs-toggle="tab" href="#@Model.Tabs[i].Id" role="tab" aria-controls="@Model.Tabs[i].Id" aria-selected="@(Model.Tabs[i].IsActive ? "true" : "false")">@Model.Tabs[i].Title</a>
        </li>
    }
</ul>

<div class="tab-content">
    @for (int i = 0; i < Model.Tabs.Count; i++)
    {
        <div class="tab-pane fade @(Model.Tabs[i].IsActive ? "show active" : "")" id="@Model.Tabs[i].Id" role="tabpanel" aria-labelledby="@Model.Tabs[i].Id-tab">
            @(await Html.RenderPartialViewAsync(Model.Tabs[i].PartialViewName, Model.Tabs[i].Model))
        </div>
    }
</div>